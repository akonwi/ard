use ard/io

fn fahrenheit_to_celsius(f: Float) Float {
  (f - 32.0) * 5.0 / 9.0
}

// Convert temperatures from 0F to 220F, step by 20
for temp in 0..220 {
    if temp % 20 == 0 {
        let celsius = fahrenheit_to_celsius(Float::from_int(temp))
        io::print("{temp.to_str()} F = {celsius.to_str()} C")
    }
}
