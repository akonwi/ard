use ard/io

let target = 47

fn main() {
  while {
    io::print("Please input your guess:")
    match io::read_line() {
      ok(guess) => {
        io::print("You guessed: {guess.trim()}")
        match Int::from_str(guess) {
          num => {
            if num < target {
              io::print("Too low")
            } else if num > target {
              io::print("Too high")
            } else {
              io::print("Correct!")
              break
            }
          },
          _ => io::print("not a number")
        }
      },
      err => {
        io::print("Failed to read input: {err}")
        break
      }
    }
  }
}

io::print("Guess the number!")

main()
